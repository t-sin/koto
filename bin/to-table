#!/bin/bash

usage () {
	cat <<USAGE
usage: to-table WAV

to-table converts specified WAV file into Koto's wavetable format.
USAGE
}

if [ ! "$#" -eq 1 ] ; then
    usage
    exit 1
fi

WAV_PATH="$1"


sox "$WAV_PATH" -t f32 -c 1 - |
    od -An -v -t f4 --endian=little |
    tr -d '\n' |
    tr -s ' '
