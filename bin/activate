# This file must be used with "source ./bin/activate" in *Koto directory*

deactivate () {
    if [ -n "${_OLD_PS1:-}" ] ; then
        PS1="$_OLD_PS1"
        export PS1
        unset _OLD_PS1
    fi

    if [ -n "${_OLD_PATH:-}" ] ; then
        PATH="$_OLD_PATH"
        export PATH
        unset _OLD_PATH
    fi

    unset -f deactivate
}

_OLD_PATH="$PATH"
_OLD_PS1="$PS1"

PS1="(koto:\W) $ "
PATH="$(readlink -f $(pwd)/bin):$PATH"

export PS1
export PATH
